<main>
  <div>
  <p>
    <strong>id записи:</strong>
    <%= calc.id %>
  </p>
  <h3>Обновление этой записи calc (новые данные):</h3>
    <%= form_with url: "#{calcs_path}/#{calc.id}", method: :put do |f| %>
      <table>
        <tr>
          <td><%= f.label :query_number, 'Введите количество элементов последовательности' %></td>
          <td><%= f.number_field :query_number, placeholder: "Количество элементов последовательности", value: "#{calc.query_number}" %></td>
        </tr>
        <tr>
          <td><%= f.label :query_sequence, 'Введите последовательность' %></td>
          <td><%= f.text_field :query_sequence, placeholder: "Последовательность", value: "#{calc.query_sequence}" %></td>
        </tr>
      </table>
      <br>
      <%= f.submit "Обновить запись:", id: 'calculate-btn' %>
    <% end %>
  </div>
</main>
